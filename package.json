{
  "name": "pink",
  "description": "Учебный проект - «Пинк»",
  "author": "Sergey Bodnaryuk <s.bodnaryuk@gmail.com>",
  "homepage": "https://github.com/justGoodFellow/pink",
  "private": true,
  "engines": {
    "node": "8.16"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"sass/**/*.scss\" --syntax scss",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "gulp",
    "start": "gulp && gulp serve"
  },
  "editorconfig-cli": [
    "*.json",
    "pug/**/*.pug",
    "img/*.svg",
    "sass/**/*.scss",
    "js/*.js"
  ],
  "browserslist": [
    "> 0.5% in RU",
    "last 2 versions",
    "IE 11",
    "iOS >= 10",
    "not dead"
  ],
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "^1.0.0",
    "autoprefixer": "^9.7.3",
    "browser-sync": "^2.26.7",
    "css-mqpacker": "^7.0.0",
    "del": "^5.1.0",
    "editorconfig-tools": "^0.1.1",
    "eslint": "^6.7.2",
    "eslint-config-htmlacademy": "^0.5.2",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-csso": "^4.0.1",
    "gulp-imagemin": "^6.2.0",
    "gulp-minify": "^3.1.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-pug": "^4.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^4.0.2",
    "gulp-svgmin": "^2.2.0",
    "gulp-svgstore": "^7.0.1",
    "postcss-object-fit-images": "^1.1.2",
    "stylelint": "^12.0.0",
    "stylelint-config-htmlacademy": "^0.1.4"
  }
}
